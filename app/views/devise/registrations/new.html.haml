%main.l-register
  %div.register--main
    %h2 新規ユーザー登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name),html:{class:"clear-fix"}) do |f|
      = devise_error_messages!
      .field
        = f.label :user_name, "ユーザー名"
        %br/
        = f.text_field :user_name, autofocus: true
      .field
        = f.label :email, "メールアドレス"
        %br/
        = f.email_field :email, autofocus: true
      .field
        = f.label :password, "パスワード"
        - if @minimum_password_length
          (#{@minimum_password_length} 文字以上にしてください)
        %br/
        = f.password_field :password, autocomplete: "off"
      .field
        = f.label :password_confirmation, "パスワード確認"
        %br/
        = f.password_field :password_confirmation, autocomplete: "off"
      .actions
        = f.submit "新規登録",{class:"btn btn-submit"}
    = render "devise/shared/links"
